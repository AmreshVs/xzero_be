{
  "kind": "collectionType",
  "collectionName": "promocodes",
  "info": {
    "name": "promocode"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "promocode": {
      "type": "string"
    },
    "start_date": {
      "type": "datetime"
    },
    "end_date": {
      "type": "datetime"
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "allowed_maximum_discount": {
      "type": "decimal",
      "default": 0
    },
    "maximum_usage_per_user": {
      "type": "integer",
      "default": 1
    },
    "total_usage": {
      "type": "biginteger",
      "default": "0"
    },
    "applied_for": {
      "type": "enumeration",
      "enum": [
        "membership",
        "voucher",
        "both"
      ],
      "default": "both"
    },
    "limit": {
      "type": "integer",
      "default": 0
    },
    "status": {
      "type": "boolean",
      "default": true
    }
  }
}
