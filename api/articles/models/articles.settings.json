{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title_en": {
      "type": "string"
    },
    "title_ar": {
      "type": "string"
    },
    "featured_img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "video_url": {
      "type": "string"
    },
    "views": {
      "type": "biginteger",
      "default": "0"
    },
    "likes": {
      "type": "biginteger",
      "default": "0"
    },
    "status": {
      "type": "boolean"
    },
    "desc_en": {
      "type": "richtext"
    },
    "desc_ar": {
      "type": "richtext"
    },
    "article_category": {
      "model": "article-categories"
    }
  }
}
