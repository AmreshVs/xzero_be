{
  "kind": "collectionType",
  "collectionName": "affiliates",
  "info": {
    "name": "Affiliate"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "users": {
      "plugin": "users-permissions",
      "collection": "user"
    },
    "referral_code": {
      "type": "string"
    },
    "limit": {
      "type": "integer"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "limited",
        "public"
      ],
      "default": "public"
    },
    "allowed_usage_per_user": {
      "type": "integer"
    },
    "applied_for": {
      "type": "enumeration",
      "enum": [
        "voucher",
        "membership",
        "both"
      ],
      "default": "both"
    },
    "total_usage": {
      "type": "biginteger",
      "default": "0"
    },
    "discount": {
      "type": "integer"
    },
    "maximum_allowed_discount": {
      "type": "integer"
    },
    "status": {
      "type": "boolean",
      "default": true
    }
  }
}
