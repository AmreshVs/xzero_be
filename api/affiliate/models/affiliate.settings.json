{
  "kind": "collectionType",
  "collectionName": "affiliates",
  "info": {
    "name": "Affiliate"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "referral_code": {
      "type": "string"
    },
    "limit": {
      "type": "integer",
      "default": 0
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "limited",
        "public"
      ],
      "default": "public"
    },
    "allowed_usage_per_user": {
      "type": "integer",
      "default": 1
    },
    "applied_for": {
      "type": "enumeration",
      "enum": [
        "voucher",
        "membership",
        "both"
      ],
      "default": "both"
    },
    "total_usage": {
      "type": "biginteger",
      "default": "0"
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "maximum_allowed_discount": {
      "type": "decimal",
      "default": 0
    },
    "status": {
      "type": "boolean",
      "default": true
    },
    "users_for_limited_types": {
      "plugin": "users-permissions",
      "collection": "user"
    },
    "fixed_amount_status": {
      "type": "boolean",
      "default": false
    },
    "fixed_amount": {
      "type": "decimal",
      "default": 0
    },
    "membership_plans": {
      "collection": "membership-plans"
    },
    "vouchers": {
      "collection": "vouchers"
    }
  }
}
